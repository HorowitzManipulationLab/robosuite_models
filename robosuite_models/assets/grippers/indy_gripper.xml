                <geom type="mesh" mesh="gripper_body"  group="0" name="gripper_body_visual_collision"/>
                
                <body name="leftfinger" pos = "-0.03 -0.0070 0.061">
                    <inertial pos="0 0 0.0" mass="0.1" diaginertia="0.01 0.01 0.005" />
